.card
  .card-header
    %h2= @shop

  .card-body

    .row
      .col-12.col-sm-6
        %ul.list-group
          - %w(id name created_at).each do |attribute|
            %li.list-group-item
              %h6= t("activerecord.attributes.shop.#{attribute}").humanize
              %span= @shop.send(attribute)

      .col-12.col-sm-6
        = render('shops/opening_slots/display', opening_slots: @opening_slots, start_with_day: Date.today.wday)
      .col-12
        %hr

      .col-12
        = render('shops/opening_slots/list', shop: @shop, opening_slots: @opening_slots, pagy: @pagy)
